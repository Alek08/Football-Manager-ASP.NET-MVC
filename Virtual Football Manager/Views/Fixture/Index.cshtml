@model IEnumerable<Virtual_Football_Manager.Models.Fixture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    .changeColorOnMouseHover:hover td {
        background: #99c0ff;
    }
</style>

<p>@{

    if (User.IsInRole(Virtual_Football_Manager.Models.RoleNames.ADMIN))
    {
        @Html.ActionLink("Create New Fixture", "Create")
    }
}
    
</p>
<p>
    @Html.ActionLink("View Table", "ViewTable")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="location.href = '@(Url.Action("Details", "Fixture", new { id = item.id })  )'"
                style="cursor: pointer;"
        class="changeColorOnMouseHover">
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @{
                if (User.IsInRole(Virtual_Football_Manager.Models.RoleNames.ADMIN))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                }
            }
        </td>
    </tr>
}

</table>
