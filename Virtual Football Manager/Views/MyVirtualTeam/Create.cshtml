@model Virtual_Football_Manager.Models.ModelAddFootballPlayersToVirtualTeam

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MyVirtualTeam</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

  
        <div class="form-group">
            @Html.LabelFor(model => model.myVirtualTeamName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.virtualTeam != null)
                {
                    @Html.EditorFor(model => model.myVirtualTeamName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                }
                else {
                    @Html.EditorFor(model => model.myVirtualTeamName, new { htmlAttributes = new { @class = "form-control" } })
                }
                @Html.ValidationMessageFor(model => model.myVirtualTeamName, "", new { @class = "text-danger" })
            </div>
        </div>
         
   


 
